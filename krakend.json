{
    "version": 3,
    "timeout": "4000ms",
    "plugin": {
        "pattern": ".so",
        "folder": "/app/plugin/"
    },
    "endpoints": [
        {
            "endpoint": "/test/{id}",
            "backend": [
                {
                    "host": [
                        "http://localhost:8080"
                    ],
                    "url_pattern": "/__health"
                }
            ]
        },
        {
            "endpoint": "/create-post",
            "method": "POST",
            "backend": [
                {
                    "host": [
                        "https://jsonplaceholder.typicode.com"
                    ],
                    "url_pattern": "/posts"
                }
            ]
        },
        {
            "endpoint": "/create-post-logging",
            "method": "POST",
            "backend": [
                {
                    "host": [
                        "https://jsonplaceholder.typicode.com"
                    ],
                    "url_pattern": "/posts"
                }
            ]
        }
    ],
    "extra_config": {
        "telemetry/logging": {
            "level": "DEBUG",
            "prefix": "[KRAKEND]",
            "syslog": false,
            "stdout": true,
            "format": "default"
        },
        "telemetry/opencensus": {
            "exporters": {
                "logger": {
                    "stats": true,
                    "spans": true
                }
            }
        },
        "plugin/http-server": {
            "name": [
                "klog-plugin"
            ],
            "klog-plugin": {
                "skip_paths": [
                    "/create-post",
                    "/__health"
                ],
                "enabled": true,
                "log_header_keys": [
                    "RefNo",
                    "DeviceId"
                ],
                "kafka": {
                    "enabled": false,
                    "broker_urls": [
                        "kafka-server:9092"
                    ],
                    "topic": "kq",
                    "partition": 1
                }
            }
        }
    }
}